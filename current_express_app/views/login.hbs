<div class="row custom-row">
	<div class="col">
		<div class="card">
			<div class="card-body">
				<h1 class="card-title text-center mb-4 text-white">Welcome Back</h1>
				<form action="/auth/login" method="POST">
					<div class="form-group">
						<input type="email" name="email" class="form-control mb-2 text-white" placeholder="Email"
							autocomplete="off">
					</div>
					<div class="form-group">
						<input type="password" name="password" class="form-control mb-4 text-white"
							placeholder="Password">
					</div>
					<button type="submit" class="btn btn-primary btn-lg mb-2 login-btn">Login</button>
				</form>
				<div class="text-center mb-2">
					<small class="text-white">Don't have an account? <a href="/signup"
							class="text-primary">Signup</a></small>
				</div>
				<div class="text-center mt-3 or-separator">
					<span class="text-white">OR</span>
				</div>
				<div class="mt-3">
					<a href="/auth/google" class="login-option">
						<img src="/images/google.svg" alt="Google">
						<span>Continue with Google</span>
					</a>
					<div class="login-option">
						<img src="/images/microsoft.svg" alt="Facebook">
						<span>Continue with Microsoft</span>
					</div>
					<div class="login-option">
						<img src="/images/apple.svg" alt="Email">
						<span>Continue with Apple</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>