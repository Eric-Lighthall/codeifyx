<div class="row custom-row">
  <div class="col">
    <div class="card">
      <div class="card-body">
        <h1 class="card-title text-center mb-4 text-white">Create an Account</h1>
        <form action="/auth/register" method="POST">
          <div class="form-group">
            <input type="text" name="username" class="form-control mb-2 text-white" placeholder="Username">
          </div>
          <div class="form-group">
            <input type="email" name="email" class="form-control mb-2 text-white" placeholder="Email">
          </div>
          <div class="form-group">
            <input type="password" name="password" class="form-control mb-2 text-white" placeholder="Password">
          </div>
          <div class="form-group">
            <input type="password" name="confirmPassword" class="form-control mb-4 text-white" placeholder="Confirm Password">
          </div>
          <button type="submit" class="btn btn-primary btn-lg mb-2">Sign Up</button>
        </form>
        <div class="text-center mb-2">
          <small class="text-white">Already have an account? <a href="/login" class="text-primary">Login</a></small>
        </div>
        <div class="text-center mt-3 or-separator">
          <span class="text-white">OR</span>
        </div>
        <div class="mt-3">
          <a href="/auth/google" class="login-option">
            <img src="/images/google.svg" alt="Google">
            <span>Continue with Google</span>
          </a>
          <div class="login-option">
            <img src="/images/microsoft.svg" alt="Facebook">
            <span>Continue with Microsoft</span>
          </div>
          <div class="login-option">
            <img src="/images/apple.svg" alt="Email">
            <span>Continue with Apple</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>